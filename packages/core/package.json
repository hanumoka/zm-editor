{
  "name": "@zm-editor/core",
  "version": "0.1.0",
  "description": "Core extensions and utilities for zm-editor",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./extensions": {
      "types": "./dist/extensions/index.d.ts",
      "import": "./dist/extensions/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@tiptap/core": "^2.11.0",
    "@tiptap/extension-bubble-menu": "^2.11.0",
    "@tiptap/extension-character-count": "^2.11.0",
    "@tiptap/extension-code-block-lowlight": "^2.11.0",
    "@tiptap/extension-color": "^2.11.0",
    "@tiptap/extension-highlight": "^2.11.0",
    "@tiptap/extension-horizontal-rule": "^2.11.0",
    "@tiptap/extension-image": "^2.11.0",
    "@tiptap/extension-link": "^2.11.0",
    "@tiptap/extension-placeholder": "^2.11.0",
    "@tiptap/extension-table": "^2.11.0",
    "@tiptap/extension-table-cell": "^2.11.0",
    "@tiptap/extension-table-header": "^2.11.0",
    "@tiptap/extension-table-row": "^2.11.0",
    "@tiptap/extension-task-item": "^2.11.0",
    "@tiptap/extension-task-list": "^2.11.0",
    "@tiptap/extension-text-style": "^2.11.0",
    "@tiptap/extension-underline": "^2.11.0",
    "@tiptap/pm": "^2.11.0",
    "@tiptap/starter-kit": "^2.11.0",
    "@tiptap/suggestion": "^2.11.0",
    "lowlight": "^3.1.0"
  },
  "devDependencies": {
    "tsup": "^8.3.0",
    "typescript": "^5.7.0"
  },
  "peerDependencies": {
    "@tiptap/core": "^2.11.0",
    "dompurify": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "dompurify": {
      "optional": true
    }
  },
  "keywords": [
    "tiptap",
    "prosemirror",
    "editor",
    "rich-text",
    "wysiwyg",
    "notion",
    "markdown",
    "extensions"
  ],
  "author": "hanumoka",
  "homepage": "https://github.com/hanumoka/zm-editor#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hanumoka/zm-editor.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/hanumoka/zm-editor/issues"
  }
}
