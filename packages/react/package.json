{
  "name": "@zm-editor/react",
  "version": "0.1.1",
  "description": "React components for zm-editor - Notion-like rich text editor",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css",
    "./variables.css": "./dist/variables.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@tiptap/core": "^2.11.0",
    "@tiptap/extension-image": "^2.11.0",
    "@tiptap/react": "^2.11.0",
    "@zm-editor/core": "workspace:*"
  },
  "devDependencies": {
    "@types/katex": "^0.16.8",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsup": "^8.3.0",
    "typescript": "^5.7.0"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18",
    "mermaid": "^11.0.0",
    "katex": "^0.16.0",
    "pdfjs-dist": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "mermaid": {
      "optional": true
    },
    "katex": {
      "optional": true
    },
    "pdfjs-dist": {
      "optional": true
    }
  },
  "keywords": [
    "react",
    "editor",
    "rich-text",
    "wysiwyg",
    "notion",
    "tiptap",
    "prosemirror",
    "nextjs",
    "markdown",
    "code-block",
    "mermaid",
    "katex"
  ],
  "author": "hanumoka",
  "homepage": "https://github.com/hanumoka/zm-editor#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hanumoka/zm-editor.git",
    "directory": "packages/react"
  },
  "bugs": {
    "url": "https://github.com/hanumoka/zm-editor/issues"
  }
}
